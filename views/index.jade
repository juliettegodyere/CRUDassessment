extends layout

block content
    - if (!user || (!req.body.username || !req.body.password)){
        p.error= error
    - } 

    h1.log= title
   

   

    form(name="loginForm",method="post",action="/", id="loginForm", class="form-horizontal")
        div.form-group.row
            div.col-md-1
                p Username:
            div.col-md-4 
                input(type="text", placeholder="", name="username",class="form-control", id="username")
        div.form-group.row
            div.col-md-1
                p Password:
            div.col-md-4 
                input(type="password", placeholder="", name="password", class="form-control", id="password")
        
        div.form-group.row
            div.col-md-1
                        
            div.col-md-4
                button#submit.btn-info.form-control(type="submit", value="Submit") submit
